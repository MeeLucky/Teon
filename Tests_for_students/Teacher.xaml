<Window x:Class="Tests_for_students.Teacher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tests_for_students"
        mc:Ignorable="d"
        Title="Teon : teacher" Height="350" Width="400">
    <StackPanel Margin="20">
        <TextBlock TextWrapping="Wrap" FontSize="18" Text=" Вы можете редактировать уже ранее созданный тест или создать новый."/>
        <Button FontSize="18" Margin="30,10" 
                Click="EditTest_Click" Content="Редактировать тест"/>
        <Button FontSize="18" Margin="30,10" 
                Click="CreateTest_Click" Content="Создать тест" />
    </StackPanel>
</Window>
